<?xml version="1.0" encoding="utf-8"?>
<demoapps.android.collections.TripleDeckView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/tripleDeck_width"
    card_view:cardElevation="@dimen/eleavation"
    card_view:cardCornerRadius="@dimen/cornerRadius"
    android:layout_height="@dimen/tripleDeck_height"
    android:background="@drawable/box_cover">

    <RelativeLayout
        android:id="@+id/openArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/std_margin"
        android:layout_below="@+id/blancksp" >

        <include
            android:id="@+id/openCard1"
            android:layout_alignParentStart="true"
            android:layout_width="@dimen/cardview_width"
            android:layout_height="@dimen/cardview_height"
            android:layout_margin="@dimen/std_margin"
            layout="@layout/view_gm_card" />

        <include
            android:id="@+id/openCard2"
            android:layout_centerInParent="true"
            android:layout_width="@dimen/cardview_width"
            android:layout_height="@dimen/cardview_height"
            android:layout_margin="@dimen/std_margin"
            layout="@layout/view_gm_card" />

        <include
            android:id="@+id/openCard3"
            android:layout_alignParentEnd="true"
            android:layout_width="@dimen/cardview_width"
            android:layout_height="@dimen/cardview_height"
            android:layout_margin="@dimen/std_margin"
            layout="@layout/view_gm_card" />

    </RelativeLayout>

</demoapps.android.collections.TripleDeckView>