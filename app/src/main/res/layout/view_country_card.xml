<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/md_margin"
    android:layout_marginVertical="@dimen/md_margin_2"
    app:checkedIcon="@drawable/ic_check"
    app:checkedIconTint="@color/colorAccent"
    android:clickable="true"
    android:focusable="true"
    android:checkable="true"
    app:cardElevation="@dimen/std_elvation"
    app:strokeWidth="@dimen/std_border"
    app:strokeColor="@color/colorDivider"
    android:backgroundTint="@android:color/white"
    android:theme="@style/Theme.MaterialComponents.Bridge">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/md_margin"
        android:layout_marginVertical="@dimen/std_margin"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtCountry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/app_name"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
            android:textColor="@android:color/black" />

        <ImageView
            android:id="@+id/imgFlag"
            android:layout_width="@dimen/flagIconW"
            android:layout_height="@dimen/flagIconH"
            android:layout_gravity="end"
            android:layout_alignParentEnd="true"
            android:contentDescription="@string/select_ride"
            android:src="@drawable/ic_flag_in" />

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>

